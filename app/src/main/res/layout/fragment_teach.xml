<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <ImageView
            android:id="@+id/fragment_one_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
            <TextView
                android:id="@+id/fragment_one_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/fragment_one_img"
                android:gravity="center_vertical"
                android:text="nihao"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#969090"
                />
        <TextView
            android:id="@+id/fragment_one_tv2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/fragment_one_tv"
            android:layout_toRightOf="@id/fragment_one_img"
            android:gravity="center_vertical"
            android:text="nihao"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="#9c9595"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:text="精彩回放"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:textColor="#3378d2"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#8e8a8a"/>
    <ListView
        android:id="@+id/fragment_one_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>