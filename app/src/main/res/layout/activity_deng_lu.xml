<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.phone.zhibotv.DengLuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#2581f9"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/search_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/huitui"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="登录"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"
            />
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="#eae7e7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号"
            android:textColorHint="#d9d5d5"
            android:background="@null"
            android:textCursorDrawable="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="#eae7e7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:textColorHint="#d9d5d5"
            android:background="@null"
            android:textCursorDrawable="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eae7e7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="忘记密码 >"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:layout_marginTop="8dp"
            android:paddingRight="8dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="登录"
            android:background="#2581f9"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#161616"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="其他方式登录"
                android:gravity="center"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#161616"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/image_btn_qq"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@mipmap/lp_qq_icon"
                android:background="#ffffff"
                />
            <ImageButton
                android:id="@+id/image_btn_weichat"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@mipmap/lp_weichat_icon"
                android:background="#ffffff"
                />
            <ImageButton
                android:id="@+id/image_btn_sina"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@mipmap/lp_sina_icon"
                android:background="#ffffff"
                />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="立即注册 >>"
            android:textColor="#2581f9"
            android:gravity="center|bottom"
            android:layout_marginBottom="20dp"
            />
</LinearLayout>
</LinearLayout>