<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <TextView
            android:id="@+id/panghang_item_tv1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/panghang_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/panghang_item_tv1"
            android:layout_marginTop="15dp"
            />
        <ImageView
             android:id="@+id/panghang_item_img2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="75dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
        <TextView
            android:id="@+id/panghang_item_tv2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="小罗"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/panghang_item_img"/>
        <TextView
            android:id="@+id/panghang_item_tv3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_toRightOf="@id/panghang_item_tv2"
            android:layout_marginTop="15dp"

            />
        <ImageView
            android:id="@+id/panghang_item_img3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@mipmap/lp_bo_coin"
            android:layout_toRightOf="@id/panghang_item_tv3"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>

</LinearLayout>