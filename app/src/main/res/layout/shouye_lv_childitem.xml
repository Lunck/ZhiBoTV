<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/item_item_relayout1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/item_item_img"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/item_item_tv7"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/zuyetext"
                android:text="直播"
                android:gravity="center"
                android:textColor="#ffff"/>
            <ImageView
                android:id="@+id/item_item_img2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:src="@mipmap/ic_launcher"/>
            <ImageView
                android:id="@+id/item_item_img3"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="130dp"/>
            <TextView
                android:id="@+id/item_item_tv1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/item_item_img"
                android:layout_toRightOf="@id/item_item_img2"
                android:text="nihao"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"/>
            <ImageView
                android:id="@+id/item_item_img9"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/item_item_tv1"
                android:layout_toRightOf="@id/item_item_img2"/>
            <TextView
                android:id="@+id/item_item_tv2"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@id/item_item_tv1"
                android:layout_toRightOf="@id/item_item_img9"
                android:text="你好"
                android:gravity="center_vertical"
                android:textColor="#b7b0b0"
                android:textSize="10dp"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <ImageView
                android:id="@+id/item_item_img8"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/item_item_tv1"
                android:layout_toRightOf="@id/item_item_tv2"
                android:src="@mipmap/guanzhong"
                />
            <TextView
                android:id="@+id/item_item_tv3"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_below="@id/item_item_tv1"
                android:layout_toRightOf="@id/item_item_img8"
                android:text="2222"
                android:textSize="11sp"
                android:paddingLeft="4dp"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:id="@+id/item_item_relayout2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/item_item_img4"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/item_item_tv8"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/zuyetext"
                android:text="直播"
                android:gravity="center"
                android:textColor="#ffff"/>
            <ImageView
                android:id="@+id/item_item_img5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:src="@mipmap/ic_launcher"/>
            <ImageView
                android:id="@+id/item_item_img6"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="130dp"/>
            <TextView
                android:id="@+id/item_item_tv4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/item_item_img4"
                android:layout_toRightOf="@id/item_item_img5"
                android:text="nihao"
                android:textSize="10sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"/>
            <ImageView
                android:id="@+id/item_item_img10"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@id/item_item_tv4"
               android:layout_toRightOf="@id/item_item_img5"
                android:layout_marginTop="5dp"

                />
            <TextView
                android:id="@+id/item_item_tv5"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@id/item_item_tv4"
                android:layout_toRightOf="@id/item_item_img10"
                android:text="你好"
                android:gravity="center_vertical"
                android:textColor="#b7b0b0"
                android:textSize="10dp"
                android:paddingLeft="4dp"
                />
            <ImageView
                android:id="@+id/item_item_img7"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/item_item_tv4"
                android:layout_toRightOf="@id/item_item_tv5"
                android:src="@mipmap/guanzhong"
                />
            <TextView
                android:id="@+id/item_item_tv6"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_below="@id/item_item_tv4"
                android:layout_toRightOf="@id/item_item_img7"
                android:text="2222"
                android:textSize="10sp"
                android:padding="4dp"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>