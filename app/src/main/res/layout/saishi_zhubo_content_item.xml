<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="150dp"
    android:padding="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
           >
            <ImageView
                android:id="@+id/zhubo_content_item_img"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher"/>
            <ImageView
                android:id="@+id/zhubo_content_item_img2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="100dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/zhubo_content_item_title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/zhubo_content_item_img"
                android:layout_toRightOf="@id/zhubo_content_item_img2"
                android:text="nihao"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"/>
            <ImageView
                android:id="@+id/zhubo_content_item_sex"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/zhubo_content_item_title"
                android:layout_toRightOf="@id/zhubo_content_item_img2"/>
            <TextView
                android:id="@+id/zhubo_content_item_name"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_below="@id/zhubo_content_item_title"
                android:layout_toRightOf="@id/zhubo_content_item_sex"
                android:text="你好"
                android:gravity="center_vertical"
                android:textColor="#b7b0b0"
                android:textSize="10dp"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/zhubo_content_item_people"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_below="@id/zhubo_content_item_title"
                android:layout_alignParentRight="true"
                android:text="2222"
                android:textSize="11sp"
                android:layout_marginRight="5dp"
                android:drawableLeft="@mipmap/guanzhong"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
<TextView
    android:id="@+id/zhubo_content_item_text"
    android:layout_width="30dp"
    android:layout_height="18dp"
    android:background="#3394f5"
    android:layout_gravity="right"
    android:text="直播"
    android:gravity="center"
    android:layout_margin="5dp"
    android:textColor="#fff"/>
</FrameLayout>