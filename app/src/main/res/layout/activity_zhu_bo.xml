<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.phone.zhibotv.ZhuBoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#2d65d4">
        <ImageView
            android:id="@+id/zhubo_back"
            android:layout_marginTop="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/zhubofanhui"
            />
        <TextView
            android:id="@+id/zhubo_title"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffff"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/zhubo_qingxi"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/qingxidu"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/zhubo_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </WebView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff"
            android:layout_marginTop="230dp"
            android:orientation="vertical">
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_tablayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
               />
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/meikanbo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="没有该主播，去看看其他主播吧"
            android:textSize="20sp"
            android:textColor="#dc4343"
            android:visibility="gone"
            android:gravity="center"/>

    </FrameLayout>


</LinearLayout>
