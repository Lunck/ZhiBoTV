<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phone.zhibotv.HistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="#2581f9"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/search_back"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/myhuitui"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="我的任务"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/peron_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/lp_withdrawals_cash_icon"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#050505"
                android:text="手机签到"
                />
            <Button
                android:id="@+id/btn_lingqu"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="领取"
                android:gravity="center"
                android:button="@null"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_lingqu"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2dfdf"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/default_task_icon"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#050505"
                android:text="每天登录一次"
                />
            <Button
                android:id="@+id/btn_lingqu2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="领取"
                android:gravity="center"
                android:button="@null"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_lingqu"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2dfdf"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/lp_vip_small"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#050505"
                android:text="手机绑定"
                />
            <Button
                android:id="@+id/btn_lingqu3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="领取"
                android:gravity="center"
                android:button="@null"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_lingqu"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2dfdf"
            />
    </LinearLayout>
</ScrollView>
