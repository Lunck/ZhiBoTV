<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.phone.zhibotv.SaiShiZhuBoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2581f9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/saishi_zhubo_content_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:id="@+id/saishi_zhubo_content_biaoti"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="ZhiBoTV"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/saishi_zhubo_content_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
